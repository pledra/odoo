<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Cron job for creating recurring vendor bills -->
    <record id="recurrent_vendor_bills_cron" model="ir.cron">
        <field name="name">Account: generate recurring vendor bills</field>
        <field name="model_id" ref="account.model_account_invoice"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_recurring_document()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <!-- Cron job for creating recurring journal entries -->
    <record id="recurrent_journal_entries_cron" model="ir.cron">
        <field name="name">Account: generate recurring journal entries</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_recurring_document()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>
