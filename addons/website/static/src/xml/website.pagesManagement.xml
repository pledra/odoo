<templates xml:space="preserve">
<div t-name="website.pagesManagement.dialog.edit">
    <ul class="oe_menu_editor list-unstyled">
        <t t-foreach="widget.pages" t-as="page">
            <div class="input-group" t-att-data-page-path="page.path" t-att-data-page-id="page.id">
                <span class="input-group-btn">
                    <button type="button" t-attf-title="#{page.website_published and 'Publish' or 'Unublish'} this page" t-attf-class="btn js_publish_page fa js_publish_management #{page.website_published and 'fa-eye-slash btn-danger' or 'fa-eye btn-primary'}"/>
                </span>
                <span class="form-control">
                    <a href="#" class="js_goto_page">
                        <t t-esc="page.name"/>
                    </a>
                    <i class="pull-right fa fa-home" style="margin-top: 3px"/>
                </span>
                <span class="input-group-btn">
                    <button type="button" title="Rename this page" class="btn btn-primary js_rename_page fa fa-id-card-o"/>
                    <button type="button" title="Edit this page" class="btn btn-primary js_edit_page fa fa-pencil-square-o"/>
                    <button type="button" title="Delete this page" class="btn btn-danger js_delete_page fa fa-trash-o"/>
                </span>
            </div>
        </t>
    </ul>
    <div class="mt32">
        <a href="#" class="js_create_page">
            <i class="fa fa-plus-circle"/> Create New Page
        </a>
    </div>
</div>
</templates>
