      <xpath expr="//group[@name='kpi_general']" position="after">
        <group name="kpi_hr" string="Recruitment">
          <field name="kpi_hr_recruitment_new_colleagues"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
