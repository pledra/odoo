<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_alipay" model="ir.ui.view">
            <field name="name">acquirer.form.alipay</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'alipay')]}">
                        <field name="alipay_payment_method" widget="radio"/>
                        <field name="alipay_partner_id"/>
                        <field name="alipay_partner_key"/>
                        <field name="alipay_seller_email" attrs="{'invisible': [('alipay_payment_method', '=', 'standard_checkout')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_alipay" model="ir.ui.view">
            <field name="name">transaction.form.alipay</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">
                <field name="date_validate" position="after">
                    <field name="out_trade_no"  attrs="{'invisible': [('provider', '!=', 'alipay')]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
