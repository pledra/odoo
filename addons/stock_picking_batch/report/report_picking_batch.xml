<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="stock_picking_batch.report_picking_batch">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="move_line_ids" t-value="o.picking_ids.mapped('move_line_ids')"/>
                    <t t-set="has_package" t-value="move_line_ids.filtered('result_package_id')" groups="stock.group_tracking_lot"/>
                    <t t-set="has_serial_number" t-value="move_line_ids.filtered('lot_id')" groups="stock.group_production_lot"/>
                    <t t-set="locations" t-value="move_line_ids.mapped('location_id')"/>
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Summary: <span t-field="o.name"/></h2><br/>
                            <div t-if="o.user_id">
                                <strong>Responsible:</strong>
                                <span t-field="o.user_id"/>
                            </div><br/>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Picking reference</th>
                                        <th>Status</th>
                                        <th>Commitment Date</th>
                                        <th>Scheduled Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.picking_ids" t-as="pick">
                                        <td>
                                            <span t-field="pick.name"/>
                                        </td>
                                        <td>
                                            <span t-field="pick.state"/>
                                        </td>
                                        <td>
                                            <span t-field="pick.date"/>
                                        </td>
                                        <td >
                                            <span t-field="pick.scheduled_date"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p style="page-break-after: always;"/>
                            <h2>Summary: <span t-field="o.name"/></h2>
                            <div t-if="o.user_id">
                                <strong>Responsible:</strong>
                                <span t-field="o.user_id"/>
                            </div><br/>
                            <t t-foreach="locations" t-as="location">
                                <t t-set="loc_move_line" t-value="move_line_ids.filtered(lambda x: x.location_id==location)"/>
                                <t t-set="products" t-value="loc_move_line.mapped('product_id')"/><br/>
                                <h4><strong>To take from: <span t-field="location.display_name"/></strong></h4>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th colspan="2">
                                                <table width="100%">
                                                    <th width="30%">Destination</th>
                                                    <th width="20%">Picking</th>
                                                    <th t-if="has_serial_number" width="30%">
                                                        <strong>Lot/Serial Number</strong>
                                                    </th>
                                                    <th t-if="has_package" width="20%">
                                                        <strong>Package</strong>
                                                    </th>
                                                </table>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="products" t-as="product">
                                            <td><span t-field="product.display_name"/></td>
                                            <t t-set="product_moves" t-value="loc_move_line.filtered(lambda l: l.product_id.id == product.id)"/>
                                            <td>
                                                <t t-if="not has_package">
                                                    <t t-if="any(product_moves.filtered(lambda l: l.state == 'done'))">
                                                        <span t-esc="sum(product_moves.mapped('qty_done'))"/>
                                                    </t>
                                                    <t t-else="">
                                                        <span t-esc="sum(product_moves.mapped('product_uom_qty'))"/>
                                                    </t>
                                                </t>
                                                <t t-if="has_package">
                                                    <span t-esc="sum(product_moves.mapped('qty_done'))"/>
                                                </t>
                                                <span t-field="product.uom_id" groups="product.group_uom"/>
                                            </td>
                                            <td colspan="2">
                                                <table width="100%">
                                                    <tr t-foreach="product_moves" t-as="line">
                                                        <td width="30%">
                                                            <span t-field='line.location_dest_id'/>
                                                        </td>
                                                        <td width="20%">
                                                            <span t-field='line.picking_id'/>
                                                        </td>
                                                        <t t-if="has_serial_number">
                                                            <td width="15%">
                                                                <span t-esc="line.lot_id.name"/>
                                                            </td>
                                                            <td width="15%">
                                                                <span t-field="line.qty_done"/> 
                                                                <t t-if="any(product_moves.filtered(lambda l: l.state!='done'))">
                                                                    / 
                                                                    <span t-field="line.product_uom_qty"/>
                                                                </t>
                                                            </td>
                                                        </t>
                                                        <td t-if="has_package" width="20%">
                                                            <span t-field="line.result_package_id"/>
                                                            <span t-field="line.package_id"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                         </div>
                     </t>
                 </t>
            </t>
        </template>
    </data>
</odoo>
